public class Display {

	private Player player;
	private char gameBoard[][];

	// constructor
	public Display(Player player, int mapSize) {
		this.player = player;
		this.gameBoard = new char[mapSize][mapSize];
	}

	// getters & setters
	public Player getPlayer() {
		return player;
	}

	public void setPlayer(Player player) {
		this.player = player;
	}

	public char[][] getGameBoard() {
		return gameBoard;
	}

	public void setGameBoard(char[][] gameBoard) {
		this.gameBoard = gameBoard;
	}

	// methods
	/*
	 * static public String displayGameBoard(){
	 * 
	 * 
	 * 
	 * String display = "  ";
	 * 
	 * for (char i='A'; i<='J'; i++){ display = display + i + " "; }
	 * 
	 * display = display + "\n1";
	 * 
	 * for (char i='A'; i<='J'; i++){ Coord c = new Coord(i, 1);
	 * 
	 * if (this.player.) } return display;
	 */

	public void initBoard() {


		char i = 'A';

		for (int j = 0; j < this.gameBoard.length; j++) {
			this.gameBoard[0][j] = i;
			i++;
		}
		
		for (int m = 0; m < this.gameBoard.length; m++) {
			this.gameBoard[1][j] = '.';
		}
		
		for (int k = 0; k < this.gameBoard.length; k++) { 
			for (int l = 0; l < this.gameBoard[k].length; l++) {
				System.out.print(" " + this.gameBoard[k][l]);
			} 
		}
		

	}
	/*
	 * afficher map actuel du joueur afficher map des tirs du joueurs sur la
	 * carte adverse
	 */

}
