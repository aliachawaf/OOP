package chawaf.alia.Player;

import chawaf.alia.Core.Display;

public class HumanPlayer extends Player {

	private String name;
	private Display boardGame;
	private Display boardAttack;

	//constructor
	public HumanPlayer( String name, int gridSize) {
		super(gridSize);
		this.name = name;
		this.boardGame = new Display(gridSize);
		this.boardAttack = new Display(gridSize);
	}

	// getters & setters
	public String getName() {
		return name;
	}
	
	public Display getBoardGame() {
		return boardGame;
	}

	public Display getBoardAttack() {
		return boardAttack;
	}

	
	@Override
	public String toString(){
		return this.getName().toUpperCase();
	}
		
}